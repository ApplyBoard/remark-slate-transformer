{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["monthly"],
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["slate", "slate-react", "slate-history"],
      "automerge": false
    },
    {
      "packagePatterns": ["slate_legacy", "slate-react_legacy"],
      "enabled": false
    }
  ]
}
